#remove php file extension-e.g. https://sgcholdings.co.za/file.php will become https://sgcholdings.co.za/file 
RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [NC,L]

#remove html file extension-e.g. https://sgcholdings.co.za/file.html will become https://sgcholdings.co.za/file
RewriteEngine on 
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [NC,L]

